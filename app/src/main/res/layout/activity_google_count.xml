<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    tools:context=".Authentification.GoogleCountActivity">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/stp1"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        android:text="@string/add_or_select"
        android:textColor="@color/primary_text" />

    <RelativeLayout
        android:id="@+id/google_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/background_input"
        android:paddingStart="@dimen/_16sdp"
        android:layout_centerInParent="true"
        android:paddingEnd="@dimen/_16sdp"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/launcher_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Continuer avec mon matricule"
            android:layout_centerVertical="true"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            />


    </RelativeLayout>








</RelativeLayout>