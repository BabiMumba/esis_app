<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image_profil"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/ic_propic1"
        app:civ_border_color="@color/primary"
        app:civ_border_width="1dp" />

    <RelativeLayout
        android:id="@+id/containaer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/user_image_profil"
        android:background="@drawable/item_comment_bkground"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Jacques legrimm"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_user"
            android:layout_marginStart="@dimen/_4sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="bonjour juste savoir ce tp c'est a deposer quel day"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintWidth_max="wrap" />

        <TextView
            android:id="@+id/date_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textcomment"
            android:layout_marginStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:text="le 10/10/2020"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_7sdp"
            android:textStyle="normal|italic" />


    </RelativeLayout>




</RelativeLayout>