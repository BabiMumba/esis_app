<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_15sdp"

    app:cardCornerRadius="@dimen/_5sdp"
    >
    <RelativeLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_news"
            android:layout_alignParentStart="false"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/stone_profil"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:id="@+id/titre_news"
            android:layout_toEndOf="@id/img_news"
            android:text="bonjour la faculter vous remercie de votre soutien de la part de la comptabilite"
            android:ellipsize="end"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/message_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de puis la dernier fois nous somme plus comme avant apres quelque 10"
            android:layout_below="@id/titre_news"
            android:layout_toEndOf="@id/img_news"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/primary_text"
            android:maxLines="3"
            android:ellipsize="end"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>